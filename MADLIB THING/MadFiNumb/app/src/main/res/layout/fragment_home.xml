<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#254cb6"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/sourcesTXT"
        android:layout_width="212dp"
        android:layout_height="37dp"
        android:text="Sources located on MainActivity.java"
        android:textAlignment="center"
        android:textColor="#CA4040"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="678dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="368dp"
        android:layout_height="428dp"
        android:fontFamily="sans-serif"
        android:text="WELCOME\nTO\nMADFINUMB!"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#EA5858"
        android:textSize="48sp"
        android:textStyle="bold|italic"
